<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--公用属性-->
    <!--背景色-->
    <attr name="bgColor" format="reference|color" />
    <!--刻度颜色-->
    <attr name="gradationColor" format="reference|color" />
    <!--刻度字体颜色-->
    <attr name="textColor" format="reference|color" />
	<!--其它字体大小-->
    <attr name="textSize" format="reference|dimension" />
    <!--短刻度字体大小-->
    <attr name="wq_shortGradation_textSize" format="reference|dimension" />
	<!--长刻度字体大小-->
	<attr name="wq_longGradation_textSize" format="reference|dimension"/>
    <!--中间指针线颜色-->
    <attr name="indicatorLineColor" format="reference|color" />
    <!--中间指针线宽度-->
    <attr name="indicatorLineWidth" format="reference|dimension" />

    <!--普通卷尺控件-->
    <declare-styleable name="RulerView">
        <!--背景色-->
        <attr name="bgColor" />
        <!--刻度颜色-->
        <attr name="gradationColor" />
        <!--短刻度线宽度-->
        <attr name="gv_shortLineWidth" format="reference|dimension" />
        <!--长刻度线宽度-->
        <attr name="gv_longLineWidth" format="reference|dimension" />
        <!--短刻度长度-->
        <attr name="gv_shortGradationLen" format="reference|dimension" />
        <!--长刻度长度-->
        <attr name="gv_longGradationLen" format="reference|dimension" />
        <!--刻度字体颜色-->
        <attr name="textColor" />
		<!--短刻度字体大小-->
        <attr name="wq_shortGradation_textSize" />
        <!--长刻度字体大小-->
        <attr name="wq_longGradation_textSize" />
        <!--中间指针线颜色-->
        <attr name="indicatorLineColor" />
        <!--中间指针线宽度-->
        <attr name="indicatorLineWidth" />
        <!--中间指针线长度-->
        <attr name="gv_indicatorLineLen" format="reference|dimension" />
        <!--最小值-->
        <attr name="gv_minValue" format="reference|float" />
        <!--最大值-->
        <attr name="gv_maxValue" format="reference|float" />
        <!--当前值-->
        <attr name="gv_currentValue" format="reference|float" />
		<!--最小刻度单位-->
		<attr name="smallestKeDuUnit" format="reference|float" />
        <!--刻度单位-->
        <attr name="gv_gradationUnit" format="reference|float" />
        <!--需要绘制数值之间的最小单位个数-->
        <attr name="gv_numberPerCount" format="reference|integer" />
        <!--刻度间距离-->
        <attr name="gv_gradationGap" format="reference|dimension" />
        <!--刻度与文字的间距-->
        <attr name="gv_gradationNumberGap" format="reference|dimension" />
    </declare-styleable>
</resources>
